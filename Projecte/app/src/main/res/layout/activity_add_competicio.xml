<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/salvarCompeticio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="112dp"
        android:enabled="false"
        android:text="Salvar"
        android:textColor="#212121"
        app:backgroundTint="#689F38"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.182" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edita la competició"
        android:textColor="#689F38"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <EditText
        android:id="@+id/poblacioCompeticio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Població"
        android:inputType="textPersonName"
        android:textColor="#689F38"
        android:textColorHint="#8BC34A"
        app:layout_constraintEnd_toEndOf="@+id/preuCompeticio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/preuCompeticio"
        app:layout_constraintTop_toBottomOf="@+id/preuCompeticio" />

    <EditText
        android:id="@+id/preuCompeticio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Preu"
        android:inputType="number"
        android:textColor="#689F38"
        android:textColorHint="#8BC34A"
        app:layout_constraintEnd_toEndOf="@+id/nomCompeticio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nomCompeticio"
        app:layout_constraintTop_toBottomOf="@+id/nomCompeticio" />

    <EditText
        android:id="@+id/nomCompeticio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="Nom"
        android:inputType="textPersonName"
        android:textColor="#689F38"
        android:textColorHint="#8BC34A"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="44dp" />

    <EditText
        android:id="@+id/ParticipantsCompeticio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Participants"
        android:inputType="number"
        android:textColor="#689F38"
        android:textColorHint="#8BC34A"
        app:layout_constraintEnd_toEndOf="@+id/poblacioCompeticio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/poblacioCompeticio"
        app:layout_constraintTop_toBottomOf="@+id/poblacioCompeticio" />

    <EditText
        android:id="@+id/dataCompeticio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="data"
        android:inputType="date"
        android:textColor="#689F38"
        android:textColorHint="#8BC34A"
        app:layout_constraintEnd_toEndOf="@+id/ParticipantsCompeticio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ParticipantsCompeticio"
        tools:layout_editor_absoluteY="329dp" />

    <EditText
        android:id="@+id/descripcioCompeticio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:ems="10"
        android:hint="Descripció"
        android:inputType="date"
        android:textColor="#689F38"
        android:textColorHint="#8BC34A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dataCompeticio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dataCompeticio" />

</androidx.constraintlayout.widget.ConstraintLayout>